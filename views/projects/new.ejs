<%- include('../partials/header') %>
<div class="container mt-4">
    <h1 style="text-align: center;">Add New Project</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/index" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <textarea id="editor" class="form-control" id="editor" type="text" name="desc" placeholder="Enter description"></textarea>
                </div>
                <div class="form-group">
                    <input class="" type="file" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn btn-warning btn-block" type="submit">Submit!</button>
                </div>
                
            </form>
            <a class="btn btn-sm btn-primary" href="/index">Go Back</a>

        </div>
    </div>
    <script>
        CKEDITOR.replace( 'editor' );
    </script> 
</div>

