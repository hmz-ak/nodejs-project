<%- include('../partials/header') %>

<div class="container mt-4">
    <a class="btn btn-sm btn-primary mb-2" href="/index/<%= data._id %>">Go Back</a>
    <div class="card" >
        <div class="card-body">
    <h1 style="text-align: center;">Edit <%= data.name %></h1>
    <div class="row">
        <div style="width: 35%; margin: 25px auto;">
            <form action="/index/<%=data._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=data.name%>">
                </div>
                <div class="form-group">
                    <textarea id="editor" class="form-control" type="text" name="desc" ><%=data.description%></textarea>
                </div>
                <div class="form-group">
                    <input type="file" name="image" value="../../<%=data.image%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn btn-warning btn-block" type="submit">Submit!</button>
                </div>
                
            </form>
            

        </div>
    </div>

    <script>
        CKEDITOR.replace( 'editor' );
    </script> 
    </div>
    </div>
</div>
